<style type="text/css">
	
	.card.small{
		display: none;
	}
</style>
<div class="card" style="padding: 5px;">
	
<div id="tag_cloud">
    
        <% tag_cloud Question.tag_counts, %w[sml med lar] do |tag, css_class| %>
           
   <div class="chip">
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <i class="close material-icons">close</i>
  </div>
    
  <% end %>
    
</div>

</div>